<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>C:/Users/BRUNO VIANA/versionamento.log</file>
        <append>true</append>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE-ERR" class="ch.qos.logback.core.FileAppender">
        <file>C:/Users/BRUNO VIANA/versionamento-err.log</file>
        <append>true</append>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO, DEBUG">
        <appender-ref ref="FILE"/>
    </root>

    <root level="ERROR, FATAL">
        <appender-ref ref="FILE-ERR"/>
    </root>

</configuration>